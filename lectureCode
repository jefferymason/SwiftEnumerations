// Enumeration - Grouping together related values. Set of named values.


enum Weekday {
    case Monday
    case Tuesday
    case Wednesday
    case Thursday
    case Friday
    case Saturday
    case Sunday

    func dayType() -> String {
        switch self {
        case .Sunday, .Saturday:
            return  "Weekend"
        default:
            return "Weekday"
        }
     }
}

Weekday.Monday.dayType()

Weekday.Sunday.dayType()


// Switch Statement - Allows us to execute a block of code among many options.



